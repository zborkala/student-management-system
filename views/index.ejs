<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management System</title>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <style>
        body {
            margin: 0;
        }

        .wrapper {
            display: flex;
        }

        .sidebar {
            background: rgb(245, 238, 243);
            width: 250px;
            height: 100vh;
        }

        .mainbar {
            flex-grow: 1;
            height: 100vh;
            background: #d4d4d4;
        }

        .logo {
            display: flex;
            justify-content: center;
            padding: 10px;
        }

        .logo img {
            height: 35px;
        }

        .side-links {
            list-style-type: none;
            padding: 0px;
        }

        .side-links li a {
            text-decoration: none;
            display: block;
            padding: 10px;
            border-bottom: 1px solid #dadada;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }

        
        .card {
            background: white;
            margin: 10px;
            padding: 25px;
            height: 90%;
            box-shadow: 0px 0px 8px rgba(88, 85, 85, 0.34) inset;
            border: 1px solid rgba(136, 134, 134, 0.507);
        }
        
        .mytable {
            border-collapse: collapse;
            width: 100%;
        }

        .mytable th,
        .mytable td {
            border: 1px solid #dadada;
            padding: 5px;
        }

        .action-group {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
        }

        .action-btn {
            color: white; 
            text-decoration: none; 
            padding: 5px; 
            border-radius: 4px;
            border: none;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 14px;
        }
        
    </style>
</head>

<body>
    <div class="wrapper">
        <aside class="sidebar">
            <div class="logo">
                <img src="/images/logo.png">
            </div>
            <ul class="side-links">
                <li>
                    <a href="./"><i class="fa-solid fa-users"></i> Students List</a>
                </li>
                <li>
                    <a href="./add_student"><i class="fa-solid fa-user-plus"></i> Add Student</a>
                </li>
                <li>
                    <a href="./logout"><i class="fa-solid fa-power-off"></i> Logout</a>
                </li>
            </ul>
        </aside>
        <div class="mainbar">
            <div class="card">
                <table class="mytable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(student=> { %>
                            <tr>
                                <td>
                                    <%= student.id %>
                                </td>
                                <td>
                                    <%= student.name %>
                                </td>
                                <td>
                                    <%= student.class %>
                                </td>
                                <td>
                                    <%= student.age %>
                                </td>
                                <td>
                                    <%= student.gender %>
                                </td>
                                <td>
                                    <%= student.phone %>
                                </td>
                                <td>
                                    <div class="action-group">
                                        <a href="" class="action-btn" style="background: blue; ">View</a>
                                        <a href="" class="action-btn" style="background: rgb(193, 76, 191); ">Edit</a>
                                        <button class="action-btn" style="background: red; ">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>